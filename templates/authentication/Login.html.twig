{% extends 'Base.html.twig' %}

{% block body %}
    <div class="container main">
        <div class="row">
            <div class="col s12 m6 center offset-m3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Inloggen</span>
                        <br>
                        <br>

                        <div class="row">

                            <img src="img/safety.png" width="50%">

                        </div>

                        <br>
                        <br>

                        <!--            log in input field-->
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Dit is geen correct emailadres"
                                  data-success=""></span>
                        </div>
                        <!--            Password input field -->
                        <div class="input-field col s12">
                            <input id="password" type="password">
                            <label for="email">Wachtwoord</label>
                        </div>
                        <!--                submit button-->
                        <button class="btn waves-effect waves-light orange" type="submit" name="action">Log in
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}