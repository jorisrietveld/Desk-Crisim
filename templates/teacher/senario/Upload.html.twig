{% extends 'teacher/Index.html.twig' %}

{% block TeacherContent %}
    <div class="row">
        <div class="col s12 m6">
            <div class="card medium">
                <div class="card-content">
                    <span class="card-title">Scenario uploaden</span>
                    <form action="#">
                        <div class="row">

                            <div class="file-field input-field col s12 m12">
                                <div class="btn orange s2">
                                    <span>Kies bestand</span>
                                    <input type="file">
                                </div>
                                <div class="file-path-wrapper s12 m12">
                                    <input class="file-path validate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn waves-effect orange" type="submit" name="action">Uploaden
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Uitleg</span>

                    <div class="row">

                        <ul class="collection">
                            <li class="collection-item">Upload scenario</li>
                            <li class="collection-item">Kies een bestand dat u wilt uploaden om als scenario te gebruiken.</li>
                        </ul>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="js/materialize.min.js"></script>

    <script>
        $(document).ready(function () {
            $('select').formSelect();
        });
    </script>
{% endblock %} {# TeacherContent #}