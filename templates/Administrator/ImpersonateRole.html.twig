{% extends 'Base.html.twig' %}

{# Set the translation domain for this template, you can place the text on this page in ./translations/administrator #}
{% trans_default_domain 'administrator' %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-title">
                            <p>{{ 'index.container.title' }}</p>
                        </div>

                        <ul class="collection">

                            <li class="collection-item avatar">
                                <a href='{{ path('teacher_index') }}'>
                                    <i class="material-icons circle">insert_link</i>
                                </a>
                                <p>{{ 'index.link.Teacher'|trans }}
                                    <a href="{{ path('teacher_index') }}" class="secondary-content">
                                        <i class="material-icons black-text">send</i>
                                    </a>
                                </p>
                            </li>

                            <li class="collection-item avatar">
                                <a href='{{ path('student_index' )}}'>
                                    <i class="material-icons circle">insert_link</i>
                                </a>
                                <p>{{ 'index.link.Student'|trans }}
                                    <a href="{{ path('student_index' )}}" class="secondary-content">
                                        <i class="material-icons black-text">send</i>
                                    </a>
                                </p>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col s12 m12">
                <div class="card large">
                    <div class="card-content">
                        <span class="card-title">{{ 'index.index.' }}</span>
                        <form action="#" method="post">
                            <div class="input-field col s12">
                                <input id="usertype" type="text" name="usertype">
                                <label for="usertype">Gebruikerstype</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="sessionName" type="text" name="sessionName">
                                <label for="sessionName">Sessienaam</label>
                            </div>
                            <button class="btn waves-effect waves-light orange" type="submit" name="submit">Stuur
                                <i class="material-icons right">send</i>
                            </button>
                        </form>
                    </div>

                    <div class="card-content">

                        <div class="card-title"><p>Login Pagina</p></div>

                        <ul class="collection">
                            <li class="collection-item avatar">
                                <a href="{{ path('authentication_login' ) }}">
                                    <i class="material-icons circle">insert_link</i>
                                </a>
                                <p>Login Pagina
                                    <a href="{{ path('authentication_login' ) }}" class="secondary-content">
                                        <i class="material-icons black-text">send</i>
                                    </a>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
