{% extends 'Admin/AdminBase.html.twig' %}

{% set adminIndexRoutes = [
    'student_index',
    'teacher_index',
    'authentication_login',
] %}

{# Set the translation domain for this template, you can place the text on this page in ./translations/teacher #}
{% trans_default_domain 'admin' %}

 {% block AdminContent %}
     <div class="container">

         <div class="row">
             <div class="col s12 m12">
                 <div class="card">
                     <div class="card-content">
                         <div class="card-title">
                             <p>{{ 'index.page.title'|trans }}</p>
                         </div>
                         {{ dump() }}
                         <ul class="collection">

                             {% for adminIndexRoute in adminIndexRoutes %}
                                 <li class="collection-item avatar">
                                     <a href="{{ adminIndexRoute }}">
                                         <i class="material-icons circle">insert_link</i>
                                     </a>
                                     <p>{{ adminIndexRoute|trans }}
                                         <a href="{{ path(adminIndexRoute) }}" class="secondary-content">
                                             <i class="material-icons black-text">send</i>
                                         </a>
                                     </p>
                                 </li>
                             {% endfor %}
                             <li class="collection-item avatar">
                                 <a href="{{ path('administrator_index')~'/_trans' }}">
                                     <i class="material-icons circle">insert_link</i>
                                 </a>
                                 <p>{{ 'index.link.translation_interface'|trans }}
                                     <a href="{{ path('administrator_index')~'/_trans' }}" class="secondary-content">
                                         <i class="material-icons black-text">send</i>
                                     </a>
                                 </p>
                             </li>

                         </ul>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}