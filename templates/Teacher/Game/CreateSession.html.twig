{% extends 'Teacher/ImpersonateRole.html.twig' %}

{# Set the translation domain for this template, you can place the text on this page in ./translations/teacher #}
{% trans_default_domain 'teacher' %}

{% block TeacherContent %}

    <div class="row">
        <div class="col s12 m6">
            <div class="card medium">
                <div class="card-content">
                    <span class="card-title">Sessie aanmaken</span>
                    <div class="row">
                        <div class="input-field col s12 m6">
                            <input id="sessionName" type="text" class="validate">
                            <label for="sessionName">Sessie naam</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12 m6">
                            <input id="password" type="password" class="validate">
                            <label for="password">Wachtwoord</label>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn waves-effect orange" type="submit" name="action">Aanmaken
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Uitleg</span>

                    <div class="row">

                        <ul class="collection">
                            <li class="collection-item">Maak een sessienaam aan die de studenten vervolgens kunnen
                                                        gebruiken om aan de sessie te kunnen deelnemen.
                            </li>
                            <li class="collection-item">Geef de sessie een wachtwoord zodat alleen de studenten die mee
                                                        mogen doen deel kunnen nemen aan de sessie
                            </li>

                            {% if myTask %}
                                {{ dump(myTask) }}
                            {% endif %}
                        </ul>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            <div class="card medium">
                <div class="card-content">
                    <span class="card-title">Form Test</span>
                    {#{% block content %}
                        {{ form_start(form) }}

                        {{ form_row(form.task, {'attr': {'id': 'testLabel'}} ) }}
                        {{ form_row(form.save, {'attr': {'class': 'btn waves-effect orange'}}) }}


                        {{ form_end(form) }}
                    {% endblock %}#}
                </div>
            </div>
        </div>
    </div>



    <script type="text/javascript" src="js/materialize.min.js"></script>

    <script>
        $(document).ready(function () {
            $('select').formSelect();
        });
    </script>
{% endblock %} {# CreateSession #}