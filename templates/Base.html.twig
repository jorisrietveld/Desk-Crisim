{# Set the translation domain for this template, you can place the text on this page in ./translations/base #}
{% trans_default_domain 'base' %}
<!DOCTYPE html>
<html lang="">
<head>
    {# This will store the meta tags for the website.#}
    {% block metaTaggs %}
        <meta charset="UTF-8"/>
        <meta http-equiv='Content-Type' content='text/html; charset=UTF-8'/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta name="description" content="{{ 'meta.description.default'|trans }}"/>
        <meta name="keywords" content="{{ 'meta.keywords.default'|trans }}"/>
        <meta name="author" content="{{ 'meta.author.default'|trans }}"/>
        <link rel='shortcut icon' type='image/x-icon' href='./img/fav.png'/>
    {% endblock %}

    {# This will render the title of the webpage #}
    <title>{{ 'meta.title.base'|trans }}</title>

    {# This block stores all style for the website. #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {# Replace Materialize icons with yarn #}
        {#<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">#}
    {% endblock %}
</head>
<body>
    {# Include the template that contains the navigation section of the theme. #}
    {% include 'Navigation.html.twig' %}

    {# This block will be used to render the page content in #}
    {% block body %}{% endblock %}

    {# Include the template that contains the footer section of the theme. #}
    {% include 'Footer.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
